@model VoteViewModel

@section StyleSheet {
    <link href="~/css/Login.css" rel="stylesheet" />
}

@section Title {
    Survey
}

    <div class="container-fluid" style="margin-top:3rem;">
        <div class="row">
            <div class="col-lg-4">
                <img class="img-responsive" src="~/images/survey.png" />
            </div>
            <div class="col-lg-8">
                <h2 style="margin-bottom:3rem;">Daily Survey</h2>
                <form asp-controller="Parks" asp-action="SaveSurvey" method="post">
                    <div class="form-group">
                        <label asp-for="Code">Favorite National Park</label>
                        <select asp-for="Code" asp-items="Model.Parks"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="State">State of Residence</label>
                        <select asp-for="State" asp-items="Model.States"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Activity">Activity</label>
                        <select asp-for="Activity" asp-items="Model.ActivityLevels"></select>
                    </div>

                    <input type="hidden" asp-for="Email" />
                    <button class="btn btn-primary">Submit</button>

                </form>
            </div>
        </div>
    </div>